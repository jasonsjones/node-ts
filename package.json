{
  "name": "node-ts",
  "version": "1.0.0",
  "description": "Simple node app written in typescript",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run clean && npm run compile",
    "start": "npm-run-all --parallel compile:watch test:watch nodemon",
    "clean": "rm -rf build",
    "compile": "tsc",
    "compile:watch": "npm run compile -- --watch",
    "nodemon": "nodemon build/server.js",
    "test": "NODE_ENV=test mocha --compilers ts:ts-node/register src/**/*.test.ts",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Jason Jones",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/chai-http": "0.0.29",
    "@types/express": "^4.0.34",
    "@types/mocha": "^2.2.36",
    "@types/mongodb": "^2.1.37",
    "@types/mongoose": "^4.7.3",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.55",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.0",
    "ts-node": "^2.0.0",
    "typescript": "^2.1.4"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mongoose": "^4.7.6",
    "morgan": "^1.7.0"
  }
}
